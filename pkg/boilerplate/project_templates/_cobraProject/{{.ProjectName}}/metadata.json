{
  "name": "{{.ProjectName}}",
  "version": "0.1.0",
  "package": "github.com/{{.ProjectName}}",
  "description": "{{.ProjectShortDesc}}",
  "repository": "http://localhost:8081/dbt",
  "tool-repository": "http://localhost:8081/dbt-tools",
  "building": {
    "targets": [
      {
        "name": "darwin/amd64"
      },
      {
        "name": "linux/amd64"
      }
    ],
    "extras": [
      {
        "template": "templates/description.tmpl",
        "filename": "description.txt",
        "executable": false
      }
    ]
  },
  "signing": {
    "program": "gpg",
    "email": "tester@foo.com"

  },
  "publishing": {
    "targets": [
      {
        "src": "description.txt",
        "dst": "{{.Repository}}/{{.Name}}/{{.Version}}/description.txt",
        "sig": true,
        "checksums": false
      },
      {
        "src": "{{.ProjectName}}_darwin_amd64",
        "dst": "{{.Repository}}/{{.Name}}/{{.Version}}/darwin/amd64/{{.Name}}",
        "sig": true,
        "checksums": false
      },
      {
        "src": "{{.ProjectName}}_linux_amd64",
        "dst": "{{.Repository}}/{{.Name}}/{{.Version}}/linux/amd64/{{.Name}}",
        "sig": true,
        "checksums": false
      }
    ]
  }
}