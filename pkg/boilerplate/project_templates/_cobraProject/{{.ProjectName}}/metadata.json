{
  "name": "{{.ProjectName}}",
  "version": "{{.ProjectVersion}}",
  "package": "{{.ProjectPackage}}",
  "description": "{{.ProjectShortDesc}}",
  "repository": "{{.DbtRepo}}",
  "building": {
    "targets": [
      {
        "name": "darwin/amd64"
      },
      {
        "name": "darwin/arm64"
      },
      {
        "name": "linux/amd64"
      }
    ],
    "extras": [
      {
        "template": "templates/description.tmpl",
        "filename": "description.txt",
        "executable": false
      }
    ]
  },
  "signing": {
    "program": "gpg",
    "email": "tester@foo.com"

  },
  "publishing": {
    "targets": [
      {
        "src": "description.txt",
        "dst": "{{.DbtRepo}}/{{.ProjectName}}/{{.ProjectVersion}}/description.txt",
        "sig": true,
        "checksums": true
      },
      {
        "src": "{{.ProjectName}}_darwin_amd64",
        "dst": "{{.DbtRepo}}/{{.ProjectName}}/{{.ProjectVersion}}/darwin/amd64/{{.ProjectName}}",
        "sig": true,
        "checksums": true
      },
      {
        "src": "{{.ProjectName}}_darwin_arm64",
        "dst": "{{.DbtRepo}}/{{.ProjectName}}/{{.ProjectVersion}}/darwin/arm64/{{.ProjectName}}",
        "sig": true,
        "checksums": true
      },
      {
        "src": "{{.ProjectName}}_linux_amd64",
        "dst": "{{.DbtRepo}}/{{.ProjectName}}/{{.ProjectVersion}}/linux/amd64/{{.ProjectName}}",
        "sig": true,
        "checksums": true
      }
    ]
  }
}