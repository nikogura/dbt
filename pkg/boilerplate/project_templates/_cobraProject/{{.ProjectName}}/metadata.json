{
  "name": "{{.ProjectName}}",
  "version": "{{.ProjectVersion}}",
  "package": "{{.ProjectPackage}}",
  "description": "{{.ProjectShortDesc}}",
  "repository": "{{.DbtRepo}}",
  "building": {
    "targets": [
      {
        "name": "darwin/amd64"
      },
      {
        "name": "darwin/arm64"
      },
      {
        "name": "linux/amd64"
      }
    ],
    "extras": [
      {
        "template": "templates/description.tmpl",
        "filename": "description.txt",
        "executable": false
      }
    ]
  },
  "signing": {
    "program": "gpg",
    "email": "tester@foo.com"

  },
  "publishing": {
    "targets": [
      {
        "src": "description.txt",
        "dst": "{{`{{.Repository}}/{{.Name}}/{{.Version}}/description.txt`}}",
        "sig": true,
        "checksums": true
      },
      {
        "src": "{{`{{.Name}}_darwin_amd64`}}",
        "dst": "{{`{{.Repository}}/{{.Name}}/{{.Version}}/darwin/amd64/{{.Name}}`}}",
        "sig": true,
        "checksums": true
      },
      {
        "src": "{{`{{.Name}}_darwin_arm64`}}",
        "dst": "{{`{{.Repository}}/{{.Name}}/{{.Version}}/darwin/arm64/{{.Name}}`}}",
        "sig": true,
        "checksums": true
      },
      {
        "src": "{{`{{.Name}}_linux_amd64`}}",
        "dst": "{{`{{.Repository}}/{{.Name}}/{{.Version}}/linux/amd64/{{.Name}}`}}",
        "sig": true,
        "checksums": true
      }
    ]
  }
}